<Window x:Class="PrimitiveDataTypes.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Tipos de datos" Height="269" Width="296">
    <Grid>
    <Label Height="33.2766666666667" Margin="50,14,51,0" Name="label1" VerticalAlignment="Top" FontSize="18" Content="Tipos Primitivos" FlowDirection="LeftToRight" HorizontalContentAlignment="Center"></Label>
    <Label Height="31" Margin="12,53,0,0" Name="label2" VerticalAlignment="Top" HorizontalAlignment="Left" Width="131" Content="Elige un tipo de dato"></Label>
    <Label Height="31" HorizontalAlignment="Right" Margin="0,54,34,0" Name="label3" VerticalAlignment="Top" Width="63" Content="Muestra:"></Label>
    <ListBox Margin="16,90,152,27" SelectionMode="Single" Name="type" SelectionChanged="typeSelectionChange">
		<ListBoxItem>int</ListBoxItem>
		<ListBoxItem>long</ListBoxItem>
		<ListBoxItem>float</ListBoxItem>
		<ListBoxItem>double</ListBoxItem>
		<ListBoxItem>decimal</ListBoxItem>
		<ListBoxItem>string</ListBoxItem>
		<ListBoxItem>char</ListBoxItem>
		<ListBoxItem>bool</ListBoxItem>
	</ListBox>
    <TextBox Height="26" HorizontalAlignment="Right" Margin="0,92,16,0" Name="value" VerticalAlignment="Top" Width="100" />
    <Button Height="23" HorizontalAlignment="Right" Margin="0,0,28,32" Name="quit" VerticalAlignment="Bottom" Width="75" Click="quitClick" Content="_Salir"></Button>
  </Grid>
</Window>
